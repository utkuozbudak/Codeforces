#include <iostream>
using namespace std;

int main(int argc, const char * argv[])
{
    int n,k;
    cin>> n >> k;
    int arr[n];
    if(n%2==0)
    {
        int o=1;
        int e=2;
        for(int i=0;i<n/2;i++)
        {
            arr[i] = o;
            o += 2;
        }
        for(int i=n/2;i<n;i++)
        {
            arr[i] = e;
            e += 2;
        }
    }
    
    if(n%2!=0)
    {
        int o=1;
        int e=2;
        for(int i=0;i<(n/2)+1;i++)
        {
            arr[i] = o;
            o += 2;
        }
        for(int i=(n/2)+1;i<n;i++)
        {
            arr[i] = e;
            e += 2;
        }
    }
    cout<<arr[k-1];
}
